<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:foreground="?android:selectableItemBackgroundBorderless"
  android:paddingTop="8dp">

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="142dp"
    android:layout_gravity="bottom"
    android:layout_marginTop="32dp"
    app:cardCornerRadius="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false"
    app:contentPadding="16dp"
    app:contentPaddingLeft="118dp"
    android:layout_margin="16dp">

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Android" />
      <TextView
        android:id="@+id/txtVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        android:lines="5"
        android:textSize="14sp"
        tools:text="Version Lorem Version LoremVersion LoremVersion LoremVersion LoremVersion LoremVersion LoremVersion LoremVersion LoremVersion LoremVersion LoremVersion LoremVersion LoremVersion LoremVersion LoremVersion LoremVersion LoremVersion LoremVersion LoremVersion LoremVersion LoremVersion LoremVersion LoremVersion LoremVersion LoremVersion Lorem" />
    </LinearLayout>

  </androidx.cardview.widget.CardView>

  <com.facebook.drawee.view.SimpleDraweeView
    android:id="@+id/imgIcon"
    android:layout_width="90dp"
    android:layout_height="146dp"
    android:layout_marginStart="32dp"
    android:elevation="8dp"
    app:roundedCornerRadius="8dp"
    tools:background="@android:color/black" />

</FrameLayout>
